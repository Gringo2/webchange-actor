{
    "title": "SWIM: Semantic Web Intelligent Monitor",
    "description": "AI-powered semantic web change monitor.",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "targetUrl": {
            "title": "Target URL(s)",
            "type": "array",
            "description": "The URL(s) of the page(s) you want to monitor.",
            "editor": "stringList",
            "prefill": [
                "https://example.com"
            ]
        },
        "preset": {
            "title": "Preset Strategy",
            "type": "string",
            "description": "Select a monitoring strategy tailored for specific use cases.",
            "editor": "select",
            "default": "competitor-pricing",
            "enum": [
                "competitor-pricing",
                "inventory-tracker",
                "seo-intelligence",
                "generic"
            ],
            "enumTitles": [
                "Competitor Pricing (Price drops, discounts)",
                "Inventory Tracker (In-stock, Out-of-stock)",
                "SEO Intelligence (Title, Meta, H1)",
                "Generic Monitor (Custom rules)"
            ]
        },
        "cssSelector": {
            "title": "CSS Selector",
            "type": "string",
            "description": "Restrict monitoring to specific parts of the page. Leave empty for whole page.",
            "editor": "textfield"
        },
        "useVisualProof": {
            "title": "Enable Visual Proof",
            "type": "boolean",
            "description": "Capture context-aware screenshots with change highlighting.",
            "default": false
        },
        "minSeverityToAlert": {
            "title": "Min Severity Threshold",
            "type": "integer",
            "description": "Filter noise: Only alert if change score is above this value (0-100).",
            "default": 40,
            "minimum": 0,
            "maximum": 100
        },
        "useAi": {
            "title": "Use AI Analysis",
            "type": "boolean",
            "description": "Enable AI to interpret and summarize changes (recommended for business users).",
            "default": false
        },
        "aiOptions": {
            "title": "ðŸ¤– AI Configuration",
            "type": "object",
            "sectionCaption": "AI Settings",
            "properties": {
                "apiKey": {
                    "title": "OpenAI API Key",
                    "type": "string",
                    "description": "Required if AI Analysis is enabled.",
                    "editor": "textfield",
                    "isSecret": true
                },
                "model": {
                    "title": "AI Model",
                    "type": "string",
                    "description": "LLM model (default: gpt-4-turbo-preview).",
                    "editor": "textfield",
                    "default": "gpt-4-turbo-preview"
                }
            }
        },
        "slackWebhookUrl": {
            "title": "Slack Webhook URL",
            "type": "string",
            "description": "Send rich, color-coded alerts directly to your Slack channel.",
            "editor": "textfield",
            "sectionCaption": "Notifications"
        },
        "notificationConfig": {
            "title": "Custom Webhook",
            "type": "object",
            "properties": {
                "webhookUrl": {
                    "title": "Generic Webhook URL",
                    "type": "string",
                    "description": "URL for custom integration (POST JSON).",
                    "editor": "textfield"
                }
            }
        },
        "proxyConfiguration": {
            "title": "Proxy Configuration",
            "type": "object",
            "description": "Recommended for high-frequency or multi-target monitoring.",
            "editor": "proxy"
        },
        "historyDepth": {
            "title": "History Depth",
            "type": "integer",
            "description": "Number of historical snapshots to retain (prevents drift).",
            "default": 5,
            "sectionCaption": "Advanced Persistence"
        }
    },
    "required": [
        "targetUrl"
    ]
}